<resources>

    <!-- Base application theme. -->
    <style name="AchievementsTimerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="titleTextColor">@color/titleIcons</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="LargeTimerText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/timer_text_large</item>
    </style>

    <style name="SmallTimerText" parent="LargeTimerText">
        <item name="android:textSize">@dimen/timer_text_small</item>
    </style>

</resources>
