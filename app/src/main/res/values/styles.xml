<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LargeTimerText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/timer_text_large</item>
    </style>

    <style name="SmallTimerText" parent="LargeTimerText">
        <item name="android:textSize">@dimen/timer_text_small</item>
    </style>

</resources>
